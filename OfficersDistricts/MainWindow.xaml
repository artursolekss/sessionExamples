<Window x:Class="OfficersDistricts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfficersDistricts"
        mc:Ignorable="d"
        Title="Officers and Districts" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="GridStyle1" TargetType="{x:Type Grid}"/>
    </Window.Resources>
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="Name" Width="130" Height="40"/>
        <TextBox x:Name="Surname" Width="130" Height="40"/>
        <Button Width="50" Height="40" Click="AddOfficer">Add</Button>
        <ListBox x:Name="officers"/>
    </StackPanel>
</Window>
